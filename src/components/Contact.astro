const socialLinks = [
	{
		icon: Instagram,
		label: "Instagram",
		handle: "@djsunset",
		href: "https://instagram.com/djsunset",
		color: "from-purple-500 to-pink-500",
	},
	{
		icon: Music2,
		label: "SoundCloud",
		handle: "soundcloud.com/djsunset",
		href: "https://soundcloud.com/djsunset",
		color: "from-orange-500 to-orange-600",
	},
	{
