---
import { getIcon } from "../utils/icons";
import { t, type Locale } from "../translations";

interface Props {
	locale: Locale;
}

const { locale } = Astro.props;

const Waves = getIcon("waves");
const Music = getIcon("music-2");
---

<header
	id="header"
	class="fixed top-0 left-0 right-0 z-50 opacity-0 bg-black/90 backdrop-blur-md transition-all duration-300"
>
	<nav class="container mx-auto flex justify-between items-center px-6 py-4">
		<div class="flex items-center gap-3">
			<div class="flex items-center gap-2">
				<Waves class="w-5 h-5 text-orange-400" />
				<Music class="w-5 h-5 text-orange-400" />
			</div>
			<p class="text-xl text-white">in_mâ€™Ocean</p>
		</div>

		<nav class="hidden md:flex items-center gap-8">
			<a
				href="#about"
				class="text-gray-300 hover:text-orange-400 transition-colors"
				>{t(locale, "header.about")}</a
			>
			<a
				href="#music"
				class="text-gray-300 hover:text-orange-400 transition-colors"
				>{t(locale, "header.music")}</a
			>
			<a
				href="#events"
				class="text-gray-300 hover:text-orange-400 transition-colors"
				>{t(locale, "header.events")}</a
			>
			<a
				href="#contact"
				class="text-gray-300 hover:text-orange-400 transition-colors"
				>{t(locale, "header.contact")}</a
			>
		</nav>
	</nav>
</header>
