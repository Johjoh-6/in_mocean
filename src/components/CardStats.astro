---
import type { AstroComponent } from "@lucide/astro";

interface Props {
	icon: AstroComponent;
	value: string;
	label: string;
}

const { icon: Icon, value, label } = Astro.props;
---

<div
	class="group bg-linear-0-to-br from-slate-800/50 via-slate-800/30 to-slate-900/50 backdrop-blur-sm p-6 rounded-xl border border-orange-500/20 hover:border-orange-500/50 hover:shadow-lg hover:shadow-orange-500/10 transition-all duration-300 transform hover:-translate-y-1"
	role="article"
	aria-label={`${value} ${label}`}
>
	<Icon
		class="w-8 h-8 text-orange-400 mb-3 group-hover:text-orange-300 transition-colors duration-300"
		aria-hidden="true"
	/>
	<div
		class="text-2xl md:text-3xl font-bold text-white mb-1 group-hover:text-orange-100 transition-colors duration-300"
	>
		{value}
	</div>
	<div
		class="text-xs md:text-sm text-gray-400 group-hover:text-gray-300 transition-colors duration-300 uppercase tracking-wide"
	>
		{label}
	</div>
</div>
