---
import Music2 from "@lucide/astro/icons/music-2";
import Headphones from "@lucide/astro/icons/headphones";
import Radio from "@lucide/astro/icons/radio";
import Waves from "@lucide/astro/icons/waves";
import { t, type Locale } from "../translations";
import CardStats from "./CardStats.astro";

interface Props {
	locale: Locale;
}

const { locale } = Astro.props;

const stats = [
	{ icon: Music2, value: "500+", label: "about.stats.shows" },
	{ icon: Headphones, value: "10k+", label: "about.stats.followers" },
	{ icon: Radio, value: "50+", label: "about.stats.cities" },
	{ icon: Waves, value: "1M+", label: "about.stats.plays" },
];
---

<section id="about">
	<div class="container mx-auto px-4 relative z-10">
		<div class="max-w-6xl mx-auto">
			<div class="grid lg:grid-cols-2 gap-16 items-center">
				<div class="relative">
					<!-- Change this for add effect wave of the ring around -->
					<div class="relative w-full aspect-square max-w-md mx-auto">
						<div
							class="absolute inset-0 border-4 border-orange-500/30 rounded-full"
						>
						</div>
						<div
							class="absolute inset-4 border-4 border-pink-500/30 rounded-full"
						>
						</div>

						<div
							class="absolute inset-8 rounded-full overflow-hidden border-4 border-white/10"
						>
							<!-- Put real image -->
							<img
								src="https://images.unsplash.com/photo-1600542552868-56ed242290e7?crop=entropy&cs=tinysrgb&fit=max&fm=jpg&ixid=M3w3Nzg4Nzd8MHwxfHNlYXJjaHwxfHxESiUyMHR1cm50YWJsZXMlMjBuaWdodHxlbnwxfHx8fDE3NzAwNDA3Mzl8MA&ixlib=rb-4.1.0&q=80&w=1080"
								alt="DJ"
								class="w-full h-full object-cover"
							/>
							<div
								class="absolute inset-0 bg-linear-to-t from-orange-900/60 to-transparent"
							>
							</div>
						</div>

						<div
							class="absolute -bottom-6 left-1/2 -translate-x-1/2 bg-linear-to-r from-orange-500 to-pink-500 text-white px-8 py-3 rounded-full text-sm font-medium shadow-2xl"
						>
							ðŸŽ§ {t(locale, "about.role")}
						</div>
					</div>
				</div>

				<div>
					<div>
						<h2
							class="text-5xl md:text-6xl mb-6 bg-linear-to-r from-orange-400 to-pink-400 bg-clip-text text-transparent"
						>
							{t(locale, "about.title")}
						</h2>
					</div>

					<p class="text-lg text-gray-300 leading-relaxed mb-8">
						{t(locale, "about.description")}
					</p>

					<p class="text-lg text-gray-300 leading-relaxed mb-12">
						{t(locale, "about.mission")}
					</p>

					<div class="grid grid-cols-2 gap-4">
						{
							stats.map((stat, index) => (
								<CardStats
									icon={stat.icon}
									value={stat.value}
									label={t(locale, stat.label)}
								/>
							))
						}
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
