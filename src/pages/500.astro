---
interface Props {
	error: unknown;
}

const { error } = Astro.props;
---

<div class="text-center">
	<h1 class="text-9xl font-bold text-red-800">500</h1>
	<p class="text-2xl font-light text-gray-600 mt-4">Internal Server Error</p>
	<p class="text-gray-500 mt-4 mb-8">
		An unexpected error occurred on the server. Please try again later or
		contact support.
	</p>
	<a
		href="/"
		class="px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600 transition duration-300"
	>
		Go back to homepage
	</a>
</div>
